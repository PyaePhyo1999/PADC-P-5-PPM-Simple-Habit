<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginRight="12dp">

    <ImageView
        android:id="@+id/iv_healthy_mind"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_healthy_mind" />

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:background="#60000000">

        <ImageView
            android:id="@+id/iv_healthy_mind_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_add_white_24dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_healthy_mind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_healthy_mind"
        android:text="Dealing With Bullies"
        android:layout_marginTop="8dp"
        android:textColor="@color/white_full"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_time_taken_for_healthy_mind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_healthy_mind"
        android:text="5 mins"
        android:textColor="@color/secondary_text"
        android:textSize="16sp" />
</RelativeLayout>