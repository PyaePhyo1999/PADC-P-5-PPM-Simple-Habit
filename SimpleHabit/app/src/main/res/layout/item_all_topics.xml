<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    app:cardCornerRadius="8dp"
    android:layout_marginBottom="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/iv_sleep_better"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_all_topics" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="#60000000">

            <RelativeLayout
                android:id="@+id/rl_icon_for_topic"
                android:layout_width="100dp"
                android:layout_height="128dp">

                <ImageView
                    android:id="@+id/iv_icon_for_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_favorite_24dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/rl_icon_for_topic">

                <TextView
                    android:id="@+id/tv_header_for_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basics"
                    android:textColor="@color/divider"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_time_taken_for_sleep_better"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_header_for_topic"
                    android:text="Inspire joy, abundance, and purpose"
                    android:textColor="@color/divider"
                    android:textSize="16sp" />


            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>


